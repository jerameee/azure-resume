{
  "scriptFile": "__init__.py",
  "bindings": [
    {
      "authLevel": "function",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [
        "get",
        "post"
      ]
    },
    {
      "type": "http",
      "direction": "out",
      "name": "$return"
    },
    {
      "type": "cosmosDB",
      "direction": "in",
      "name": "inputDocument",
      "databaseName": "YourDatabase",
      "collectionName": "YourCollection",
      "connectionStringSetting": "YourCosmosDBConnection",
      "sqlQuery": "SELECT * FROM c WHERE c.id = {id}"
    },
    {
      "type": "cosmosDB",
      "direction": "out",
      "name": "outputDocument",
      "databaseName": "YourDatabase",
      "collectionName": "YourCollection",
      "connectionStringSetting": "YourCosmosDBConnection"
    }
  ]
}
